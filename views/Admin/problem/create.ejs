<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css"
    />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>


    <link rel="stylesheet" href="/static/CSS1/admin.css">

    <script src="https://cdn.ckeditor.com/ckeditor5/35.3.2/classic/ckeditor.js"></script>
  
  </head>
  <body id="body-pd">
    <header class="header border-bottom" id="header">
      <div class="header_toggle">
        <i class="bx bx-menu" id="header-toggle"></i>
      </div>
      <!-- <div class="header_img"> -->
       <div>
        <!-- <img src="https://i.imgur.com/hczKIze.jpg" alt="" /> -->
        <h4 class="text-primary">Admin</h4>
      </div>
    </header>
    <div class="l-navbar" id="nav-bar">
      <nav class="nav">
        <div>
          <a href="/admin" class="nav_logo">
            <i class="bx bx-layer nav_logo-icon"></i>
            <span class="nav_logo-name">IUBAT_CPC</span>
          </a>
          <div class="nav_list">
            <a href="/adminProblem" class="nav_link active">
              <i class="bx bx-grid-alt nav_icon"></i>
              <span class="nav_name">Problem</span>
            </a>
            <a href="/adminInstructor" class="nav_link">
              <i class="bx bx-user nav_icon"></i>
              <span class="nav_name">instructor</span>
            </a>
            <a href="/adminCurrentMember" class="nav_link">
              <i class="bx bx-message-square-detail nav_icon"></i>
              <span class="nav_name">current member</span>
            </a>
            <a href="/adminSeniorMember" class="nav_link">
              <i class="bx bx-bookmark nav_icon"></i>
              <span class="nav_name">Senior member</span>
            </a>
           
            <a href="/adminNotice" class="nav_link">
              <i class="bx bx-folder nav_icon"></i>
              <span class="nav_name">Notice</span>
            </a>
            <a href="/adminEvent" class="nav_link">
              <i class="bx bx-bar-chart-alt-2 nav_icon"></i>
              <span class="nav_name">Event</span>
            </a>
          </div>
        </div>
        <a href="/adminSignOut" class="nav_link">
          <i class="bx bx-log-out nav_icon"></i>
          <span class="nav_name">SignOut</span>
        </a>
      </nav>
    </div>
   

       
        <!--Container Main start-->
        <div class="bg-light">
            <div class="w-75 p-3 mx-auto">
                <h3 class="text-primary">Add Problem</h3>
                <form action="/adminCreatePost" method="post">
                   
                    <div class="form-group mt-3">
                      <label for="exampleFormControlInput1">Problem Name</label>
                      <input type="text" name="name" class="form-control "  placeholder="Two Sum" required>
                    </div>

                    <div class="form-group mt-3">
                        <label for="exampleFormControlTextarea1">Problem Statement</label>
                        <textarea class="form-control" name="statement" id="problemStatement" rows="5" placeholder="write" ></textarea>
                    </div>

                    <div class="form-group mt-3">
                      <label for="exampleFormControlTextarea1">Input Statement</label>
                      <textarea class="form-control" name="inputs" id="inputStatement" rows="5" placeholder="write"  ></textarea>
                    </div>

                    <div class="form-group mt-3">
                        <label for="exampleFormControlTextarea1">Output Statement</label>
                        <textarea class="form-control" name="outputs" id="outputStatement" rows="5" placeholder="write" ></textarea>
                    </div>

                    <div class="form-group mt-3">
                        <label for="exampleFormControlTextarea1">Example Input</label>
                        <textarea class="form-control" name="input" id="input" rows="5" placeholder="write"  ></textarea>
                    </div>

                    <div class="form-group mt-3">
                        <label for="exampleFormControlTextarea1">Example Output</label>
                        <textarea class="form-control" name="output" id="output" rows="5" placeholder="write"></textarea>
                    </div>

                    <div class="form-group mt-3">
                        <label for="exampleFormControlTextarea1">Example Output</label>
                        <select name="difficulties" class="form-control form-control-sm">
                            <option value="Easy">Easy</option>
                            <option value="Medium">Medium</option>
                            <option value="Hard">Hard</option>
                        </select>
                    </div>

                    <div class="form-group mt-3">
                        <label for="exampleFormControlInput1">Topic</label>
                        <input type="text" name="topic" class="form-control"  placeholder="string" >
                      </div>

                    <div class="form-group mt-3">
                        <label for="exampleFormControlTextarea1">Solution (optional)</label>
                        <textarea class="form-control" name="solution" id="solution" rows="5" placeholder="write"></textarea>
                    </div>

                   
                    <div class="w-25 mx-auto mt-3">
                        <input type="submit" class="btn btn-primary" value="Submit" />
                    </div>


                  </form>

            </div>
            
        </div>
        <!--Container Main end-->
    


    <script src="/static/Js/admin.js"></script>

    <script>
        const Create = (name)=>{
            ClassicEditor
            .create( document.querySelector( `#${name}` ) )
            .catch( error => {
                console.error( error );
            } );
        } 


        Create("problemStatement");
        Create("inputStatement");
        Create("outputStatement");
        Create("input");
        Create("output");
        // Create("solution");

           
    </script>

    
  </body>
</html>
